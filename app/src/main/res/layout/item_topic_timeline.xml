<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tv_timeline_time"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/b2"
        android:textSize="@dimen/font_14"/>

    <TextView
        android:id="@+id/tv_timeline_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_timeline_time"
        android:layout_marginLeft="40dp"
        android:background="@color/b5"/>

    <TextView
        android:id="@+id/tv_timeline_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/tv_timeline_time"
        android:textColor="@color/b2"
        android:textSize="@dimen/font_14"/>

</RelativeLayout>
